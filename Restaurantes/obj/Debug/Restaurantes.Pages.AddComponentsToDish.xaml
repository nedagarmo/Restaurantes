<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Restaurantes.AddComponentsToDish" Title="Agregar Plato" Icon="symbol.png">
	<ContentPage.Content>
		<ScrollView>
			<StackLayout Padding="10,30,10,10" Spacing="10">
				<StackLayout Orientation="Horizontal">
					<Button x:Name="btnGuardar" Text="Guardar" TextColor="White" BackgroundColor="Green" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />
					<Button x:Name="btnCancelar" Text="Cancelar" TextColor="White" BackgroundColor="Red" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />
				</StackLayout>
				<Label Text="Menú" HorizontalOptions="Start" VerticalOptions="Center" />
				<Picker x:Name="cboMenu" Title="Seleccione un menú" HorizontalOptions="FillAndExpand" VerticalOptions="Center" />
				<ActivityIndicator x:Name="aiProcesandoComponentes" HorizontalOptions="Center" VerticalOptions="Center" />
				<StackLayout x:Name="slControls" >
				</StackLayout>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
